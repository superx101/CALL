{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES6",
    "lib": [
      "ES2021"
    ],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "removeComments": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  },
  "files": [
    "./dist/types/src/index.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "test/**/*.ts",
    "data/plugins/*.ts",
    "index.ts"
  ]
}